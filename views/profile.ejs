    <script>
        $(".username-wrapper").on({
            mouseenter: function () {
                $(".verified").css("opacity", "1");
                $(".verified").css("top", "115%");
            },
            mouseleave: function () {
                $(".verified").css("opacity", "0");
                $(".verified").css("top", "150%");
