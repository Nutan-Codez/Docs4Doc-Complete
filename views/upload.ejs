<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .file-preview {
            margin-top: 15px;
            font-size: 0.9rem;
            color: #6c757d;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Upload Report</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="uploadFile" class="form-label">File</label>
                        <input class="form-control" name="file" type="file" id="uploadFile" accept=".pdf">
                        <div id="filePreview" class="file-preview"></div>
                    </div>

                    <div class="mb-4">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" rows="3" placeholder="Write a description.."
                            name="description"></textarea>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Share</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const uploadFileInput = document.getElementById('uploadFile');
        const filePreview = document.getElementById('filePreview');

        uploadFileInput.addEventListener('change', () => {
            if (uploadFileInput.files.length > 0) {
                const fileName = uploadFileInput.files[0].name;
                filePreview.textContent = `Selected file: ${fileName}`;
            } else {
                filePreview.textContent = '';
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
